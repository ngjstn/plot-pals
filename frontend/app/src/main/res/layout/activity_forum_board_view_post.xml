<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForumBoardViewPostActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="8dp">

    <include
        android:id="@+id/include4"
        layout="@layout/activity_nav_bar"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/forum_board_post_comment1_author"
        android:layout_width="52dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="54dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="305dp"
        android:layout_marginBottom="371dp"
        android:gravity="top"
        android:text="Author"
        android:textAppearance="@style/basic_text"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forum_board_divider5"
        tools:gravity="left|center_vertical" />

    <TextView
        android:id="@+id/forum_board_post_comment1_body"
        android:layout_width="338dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="346dp"
        android:gravity="top"
        android:text="Comment text..."
        android:textAppearance="@style/basic_text"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forum_board_post_comment1_author"
        tools:gravity="left" />

    <TextView
        android:id="@+id/forum_board_post_comment1_reply1_author"
        android:layout_width="52dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="82dp"
        android:layout_marginEnd="277dp"
        android:layout_marginBottom="320dp"
        android:gravity="top"
        android:text="Author"
        android:textAppearance="@style/basic_text"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forum_board_post_comment1_body"
        tools:gravity="left|center_vertical" />

    <TextView
        android:id="@+id/forum_board_post_comment1_reply1_body"
        android:layout_width="310dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="296dp"
        android:gravity="top"
        android:text="Comment text..."
        android:textAppearance="@style/basic_text"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.811"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forum_board_post_comment1_reply1_author"
        app:layout_constraintVertical_bias="0.0"
        tools:gravity="left" />

    <View
        android:id="@+id/forum_board_post_comment1_commentbar"
        android:layout_width="310dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="272dp"
        android:background="@drawable/forum_board_comment_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forum_board_post_comment1_reply1_body" />


    <EditText
        android:layout_width="300dp"
        android:layout_height="24dp"
        android:background="@null"
        android:ems="10"
        android:hint="Comment..."
        android:inputType="text"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/forum_board_post_comment1_commentbar"
        app:layout_constraintEnd_toEndOf="@+id/forum_board_post_comment1_commentbar"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/forum_board_post_comment1_commentbar"
        app:layout_constraintTop_toTopOf="@+id/forum_board_post_comment1_commentbar"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/forum_board_post_commentbar"
        android:layout_width="310dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="53dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="428dp"
        android:background="@drawable/forum_board_comment_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forum_board_post_body" />

    <View
        android:id="@+id/forum_board_divider5"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="412dp"
        android:background="@color/plotpals_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forum_board_post_commentbar"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/forum_board_post_body"
        android:layout_width="311dp"
        android:layout_height="105dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="54dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="464dp"
        android:gravity="top"
        android:text="Post content..."
        android:textAppearance="@style/basic_text"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forum_board_post_stamp"
        app:layout_constraintVertical_bias="0.0"
        tools:gravity="left" />

    <TextView
        android:id="@+id/forum_board_post_stamp"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="151dp"
        android:layout_marginBottom="594dp"
        android:gravity="top"
        android:text="Timestamp"
        android:textAppearance="@style/basic_text"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/forum_board_post_author"
        app:layout_constraintTop_toTopOf="parent"
        tools:gravity="left|center_vertical" />

    <TextView
        android:id="@+id/forum_board_post_author"
        android:layout_width="52dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="88dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="271dp"
        android:layout_marginBottom="594dp"
        android:gravity="top"
        android:text="Author"
        android:textAppearance="@style/basic_text"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:gravity="left|center_vertical" />

    <ImageView
        android:id="@+id/forum_board_post_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="335dp"
        android:layout_marginBottom="619dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_back_ios_new" />

    <TextView
        android:id="@+id/Forum_Board_Post_Title"
        android:layout_width="227dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="88dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="619dp"
        android:gravity="top"
        android:text="Title"
        android:textAppearance="@style/page_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="24dp"
        android:background="@null"
        android:ems="10"
        android:hint="Comment..."
        android:inputType="text"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/forum_board_post_commentbar"
        app:layout_constraintEnd_toEndOf="@+id/forum_board_post_commentbar"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/forum_board_post_commentbar"
        app:layout_constraintTop_toTopOf="@+id/forum_board_post_commentbar"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>