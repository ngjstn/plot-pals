<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rectangle_8" />

    <TextView
        android:id="@+id/forum_board_task_preview_title"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:gravity="top"
        android:text="Title"
        android:textAppearance="@style/label_text_big"
        app:layout_constraintStart_toEndOf="@+id/forum_board_task_preview_type"
        app:layout_constraintTop_toTopOf="@+id/forum_board_task_preview_type" />

    <TextView
        android:id="@+id/forum_board_task_preview_description"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:gravity="top"
        android:text="Preview..."
        android:textAppearance="@style/basic_text"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/forum_board_task_preview_author"
        app:layout_constraintTop_toBottomOf="@+id/forum_board_task_preview_author"
        tools:gravity="left|center_vertical" />

    <TextView
        android:id="@+id/forum_board_task_preview_type"
        android:layout_width="52dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:gravity="left|center_vertical"
        android:text="Task"
        android:textAppearance="@style/basic_text"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:gravity="left|center_vertical"
        tools:textAlignment="center" />

    <TextView
        android:id="@+id/forum_board_task_preview_author"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:gravity="top"
        android:text="Author"
        android:textAppearance="@style/basic_text"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/forum_board_task_preview_type"
        app:layout_constraintTop_toBottomOf="@+id/forum_board_task_preview_type"
        tools:gravity="left|center_vertical" />

    <View
        android:id="@+id/forum_board_task_preview_divider"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:background="@color/plotpals_grey"
        app:layout_constraintTop_toBottomOf="@+id/forum_board_task_preview_description"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>